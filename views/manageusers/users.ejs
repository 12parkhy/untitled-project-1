<%- include('../partials/header') %>
    <div class="row" style="margin-top: 2.5rem; margin-bottom: 2.5rem">
        <div class="col">
            <form action="/manageusers" method="GET">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" name="name" id="name" value="<%= searched.name %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="email" id="email" value="<%= searched.email %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="telephoneNumb">Telephone Number</label>
                        <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" class="form-control" name="telephoneNumb" id="telephoneNumb" value="<%= searched.telephoneNumb %>">
                        <small id="telephoneNumbHelp" class="form-text text-muted">ex) 000-000-0000</small>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="addeddAfter">Added After</label>
                        <input type="date" class="form-control" name="addedAfter" id="addedAfter" value="<%= searched.addedAfter %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="addedBefore">added Before</label>
                        <input type="date" class="form-control" name="addedBefore" id="addedBefore" value="<%= searched.addedBefore %>">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
            <h2 style="margin-top: 2.5rem;">
                <%= users.length %> results</h2>
            <div class="table-responsive" style="margin-top: 2.5rem;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Telephone Number</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users != null) { %>
                            <% users.forEach((user) => { %>
                                <tr>
                                    <td>
                                        <a href="/manageusers/<%= user.id %>/edit" style="text-decoration: none; color: black;">
                                            <%= user.name %>
                                        </a>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.telephoneNumb %>
                                    </td>
                                    <td>
                                        <%= user.date.toDateString() %>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <div class="row table-alternative">
        <% if (users != null) { %>
            <% users.forEach((user) => { %>
                <div class="col-md-4">
                    <div class="card-body">
                        <a href="/manageusers/<%= user.id %>/edit" style="text-decoration: none; color: black;">
                            <h3>
                                <%= user.name %>
                            </h3>
                        </a>
                        <p class="card-text" style="margin-top: 0.5rem; margin-bottom: 0.5rem; color: black;">
                            <%= user.email %>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted"><%= user.telephoneNumb %></small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted"><%= user.date.toDateString() %></small>
                        </div>
                    </div>
                </div>
                <% }) %>
                    <% } %>
    </div>